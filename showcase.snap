@title Snap Framework â€” Feature Showcase
@description Every feature of Snap in one page
@theme default
@favicon https://em-content.zobj.net/source/apple/391/pinching-hand_1f90c.png
@var-framework "Snap"
@var-version "0.2"
@var-tagline "The LLM-Native Web Framework"

layout
  nav "ðŸ«° Snap v0.2" bg-white
    link "Components" href=#components
    link "Interactive" href=#interactive
    link "Animations" href=#animations
    link "Theming" href=#theming
    link "Charts" href=#charts
    button "GitHub" href=https://github.com/sanketkheni01/snap-framework

  hero "{framework} â€” {tagline}" bg-gradient
    text "Build beautiful websites by describing them. No CSS, no config, no boilerplate."
    text "This page showcases every feature of {framework} v{version}" muted
    row center
      button "Explore Features" href=#components
      button "View Source" href=https://github.com/sanketkheni01/snap-framework secondary

  section "Core Components" id=components
    heading "Cards & Grid"
    grid cols=3
      card "âš¡ Lightning Fast" fade-in
